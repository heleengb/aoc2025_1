package software.ulpgc.aoc;

import org.junit.jupiter.api.Test;
import software.ulpgc.aoc.controller.DialManager;

import static org.junit.jupiter.api.Assertions.assertEquals;

class DialManagerTest {

    @Test
    void testCountFinalRestingZeros_WithExample() {
        // ejemplo
        String exampleInput = """
            L50, R2, L2, L46
            """; 
        
        long expectedResult = 3;

        // ejecución
        DialManager manager = new DialManager();
        long result = manager.countFinalRestingZeros(exampleInput);

        // verificación
        assertEquals(expectedResult, result, "El cálculo del ejemplo no coincide con el esperado.");
    }

    @Test
    void testCountFinalRestingZeros_EmptyInput() {
        // archivo vacio
        String emptyInput = "";
        
        long result = new DialManager().countFinalRestingZeros(emptyInput);
        
        // si no hay datos, el resultado es 0
        assertEquals(0, result, "Debería devolver 0 para una entrada vacía.");
    }
}
